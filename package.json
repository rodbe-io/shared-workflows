    "ci-cd",
    "RBX",
    "typescript"
  ],
  "homepage": "https://github.com/rodbe-io/shared-workflows.git",
  "bugs": {
    "url": "https://github.com/rodbe-io/shared-workflows.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodbe-io/shared-workflows.git.git"
  },
  "license": "MIT",
  "author": "rodbe",
  "type": "module",
  "scripts": {
