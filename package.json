    "@rodbe/prettier-config": "^1.4.0",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-curly": "^0.3.2",
    "prettier-plugin-packagejson": "^2.5.18"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">= 18.18.2",
    "npm": ">= 8.11.0",
    "pnpm": ">= 9.15.2"
